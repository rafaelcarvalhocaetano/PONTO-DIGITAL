<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawer_layout"
    android:layout_gravity="right"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@color/branca">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/edit_nome_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rafael"
                android:textColor="@color/preto"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:gravity="center"/>
            <TextView
                android:id="@+id/edit_cnpj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11.111.1111/11111-11"
                android:textColor="@color/preto"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <ScrollView
                android:id="@+id/scrool_view"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/fundo_edit_cadastramento">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:background="@drawable/fundo_botao_acesso">

                        <ImageView
                            android:id="@+id/img_posto"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_usuario"/>

                        <View
                            android:id="@+id/view_pipe"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:background="@color/branca"/>

                        <TextView
                            android:id="@+id/numero_cadastro"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:text="123"
                            android:textColor="@color/branca"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"
                            android:background="@drawable/fundo_botao_acesso"
                            android:layout_marginLeft="5dp"/>


                        <TextView
                            android:id="@+id/nome_posto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:text="Blablabla"
                            android:textColor="@color/branca"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace"/>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>




    <include layout="@layout/toobar"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_main"
        android:elevation="10dp"/>

</android.support.v4.widget.DrawerLayout>