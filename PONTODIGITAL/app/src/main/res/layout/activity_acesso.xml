<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/acesso"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branca"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <android.support.v7.widget.CardView
                android:id="@+id/card_empresa"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:clickable="true"
                android:elevation="10dp"
                app:cardCornerRadius="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_action_business"
                    android:background="@drawable/fundo_img_card"/>

                <TextView
                    android:id="@+id/txt_empresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:text="EMPRESAS"
                    android:textSize="20sp"
                    android:fontFamily="monospace"
                    android:textColor="@color/cor_title_cardview"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acesso para empresa cadastradas"
                    android:textAlignment="center"
                    android:layout_gravity="center|bottom"
                    android:fontFamily="monospace"
                    android:textColor="@color/branca"
                    android:layout_marginBottom="10dp"/>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_posto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:clickable="true"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPrimary">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_location_on"
                    android:background="@drawable/fundo_img_card"/>

                <TextView
                    android:id="@+id/txt_posto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:text="POSTOS"
                    android:textSize="20sp"
                    android:fontFamily="monospace"
                    android:textColor="@color/cor_title_cardview"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acesso para postos cadastrados"
                    android:textAlignment="center"
                    android:layout_gravity="center|bottom"
                    android:fontFamily="monospace"
                    android:textColor="@color/branca"
                    android:layout_marginBottom="10dp"/>


            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>