<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POSTO"
            android:textColor="@color/branca"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"

                android:background="@drawable/fundo_botao_acesso"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"

                android:fontFamily="monospace"

                android:textColor="@color/branca"
                android:textStyle="bold"
                android:textSize="18sp"

                android:hint="CNPJ da Empresa"
                android:textColorHint="@color/branca"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginTop="5dp"

                android:inputType="numberPassword"
                android:fontFamily="monospace"

                android:background="@drawable/fundo_botao_acesso"
                android:drawableLeft="@drawable/cadeado"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"

                android:textColor="@color/branca"
                android:textStyle="bold"
                android:textSize="18sp"

                android:hint="Senha"
                android:maxEms="8"
                android:textColorHint="@color/branca"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMPRESA"
            android:textColor="@color/branca"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textSize="40sp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginTop="5dp"
                android:inputType="number"

                android:textColor="@color/branca"
                android:textStyle="bold"
                android:textSize="18sp"

                android:background="@drawable/fundo_botao_acesso"
                android:drawableLeft="@drawable/businnes"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"

                android:hint="Posto"
                android:textColorHint="@color/branca"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginTop="5dp"
                android:inputType="numberPassword"

                android:textColor="@color/branca"
                android:textStyle="bold"
                android:textSize="18sp"

                android:background="@drawable/fundo_botao_acesso"
                android:drawableLeft="@drawable/cadeado"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"

                android:hint="Senha"
                android:maxLength="8"
                android:textColorHint="@color/branca"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/btn_login_empresa"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"

                android:textColor="@color/branca"
                android:textSize="18sp"
                android:textStyle="bold"

                android:background="@drawable/fundo_botao"/>

            <Button
                android:id="@+id/btn_login_posto"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"

                android:textColor="@color/branca"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"

                android:background="@drawable/fundo_botao"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empresa nÃ£o Cadastrada? Cadastre-se"
                android:textColor="@color/branca"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="10dp"
                android:gravity="center"/>
        </LinearLayout>




    </LinearLayout>

</LinearLayout>